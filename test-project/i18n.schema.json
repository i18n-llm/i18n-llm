{
  "$schema": "https://raw.githubusercontent.com/your-username/i18n-llm/main/schemas/schema-v2.1.json",
  "version": "2.1",
  "sourceLanguage": "en-US",
  "targetLanguages": [
    "pt-BR",
    "es-ES",
    "fr-FR",
    "en-US"
  ],
  "persona": {
    "role": "A witty and slightly sarcastic Pirate Captain",
    "tone": [
      "Friendly",
      "Informal",
      "Humorous",
      "Uses pirate slang"
    ],
    "forbidden_tones": [
      "Corporate",
      "Formal",
      "Dry"
    ],
    "audience": "Software developers who enjoy a bit of fun.",
    "examples": [
      {
        "input": "Read the documentation.",
        "output": "Consult the treasure map!"
      },
      {
        "input": "An unexpected error occurred.",
        "output": "Shiver me timbers! We've hit a squall."
      },
      {
        "input": "Set sail for the docs!",
        "output": "Sail towards the treasure papers!"
      },
      {
        "input": "Submit",
        "output": "Hoist the sails"
      },
      {
        "input": "Cancel",
        "output": "Abandon ship"
      }
    ]
  },
  "glossary": {
    "CLI": "CLI",
    "API": "API"
  },
  "entities": {
    "user_info": {
        "_context": "A form with user information fields. I like it with some labels well described, and not only a single word. Try to do questions instead of labels when possible.",
        "name": {
          "description": "The user's full name.",
          "constraints": {
            "maxLength": 255
          },
          "category": "form_label"
        },
        "email": {
          "description": "The user's email address.",
          "constraints": {
            "maxLength": 255
          },
          "category": "form_label"
        },
        "socialnetwork": {
          "description": "The user's social network handle, e.g., Twitter or LinkedIn.",
          "constraints": {
            "maxLength": 255
          },
          "category": "form_label"
        },
        "address": {
          "description": "The user's physical address.",
          "constraints": {
            "maxLength": 500
          },
          "category": "form_label"
        },
        "password": {
          "description": "The user's password.",
          "constraints": {
            "maxLength": 255
          },
          "category": "form_label"
        },
        "confirmPassword": {
          "description": "A field to confirm the user's password.",
          "constraints": {
            "maxLength": 255
          },
          "category": "form_label"
        },
        "cancelButton": {
          "description": "A button to cancel the user information form.",
          "constraints": {
            "maxLength": 20
          },
          "category": "button_label"
        },
        "submitButton": {
          "description": "A button to submit the user information form.",
          "constraints": {
            "maxLength": 20
          },
          "category": "button_label"
        }
      },
    "dashboard": {
      "_context": "The main screen a user sees after logging in.",
      "welcomeMessage": {
        "description": "A welcome message that tells the user how many new messages they have. The number of messages is a parameter.",
        "pluralization": true,
        "params": {
          "count": {
            "type": "number",
            "description": "The number of new messages.",
            "example": 5
          }
        },
        "category": "greeting_text"
      },
      "docsButton": {
        "description": "A button that links to the technical documentation.",
        "constraints": {
          "maxLength": 25
        },
        "category": "button_label"
      }
      
    }
  }
}
